{
  "compileOnSave": false,
  "exclude": [
    "node_modules, .cache, public"
  ],
  "compilerOptions": {
    "plugins": [
      {
        "transform": "ts-transformer-imports"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "/src/*": [
        "src/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "alwaysStrict": true,
    "incremental": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true
  }
}
